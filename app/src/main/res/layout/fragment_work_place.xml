<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/space_16"
    tools:context=".filter.ui.WorkPlaceFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edCountryName"
        style="@style/Widget.EdText.TextInputLayout"
        android:hint="@string/country_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_text_name_countryName_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_day_night"
            android:cursorVisible="false"
            android:focusable="false"
            android:fontFamily="@font/ys_display_regular"
            android:inputType="textNoSuggestions"
            android:longClickable="false"
            android:textColor="@color/black_day_night"
            android:textSize="@dimen/font_16" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edAreaName"
        style="@style/Widget.EdText.TextInputLayout"
        android:hint="@string/area_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edCountryName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_text_name_areaName_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_day_night"
            android:cursorVisible="false"
            android:focusable="false"
            android:fontFamily="@font/ys_display_regular"
            android:inputType="textNoSuggestions"
            android:longClickable="false"
            android:textColor="@color/black_day_night"
            android:textSize="@dimen/font_16" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btApply"
        style="@style/bigBlueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="24dp"
        android:text="@string/accept_btn"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
