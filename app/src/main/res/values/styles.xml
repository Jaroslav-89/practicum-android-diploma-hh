<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="topToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:titleMarginStart">@dimen/space_0</item>
        <item name="android:layout_marginEnd">@dimen/space_8</item>
        <item name="contentInsetStartWithNavigation">@dimen/space_0</item>
        <item name="android:layout_marginVertical">@dimen/space_8</item>
    </style>

    <style name="topToolbarTitleText">
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:titleTextColor">?attr/colorSecondary</item>
    </style>
    <!-- common -->
    <style name="placeholderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="placeholderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:layout_marginTop">@dimen/space_16</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">@dimen/size_48</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

    <style name="blueElements">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:background">@drawable/background_blue_rounded</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="blueNotifications" parent="blueElements">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="bigBlueButton" parent="blueElements">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:paddingVertical">@dimen/space_20</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="resetTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/space_20</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

