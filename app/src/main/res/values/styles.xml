<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="topToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:titleMarginStart">@dimen/space_16</item>
        <item name="android:layout_marginVertical">@dimen/space_8</item>
    </style>
    <style name="topToolbarTitleText">
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:titleTextColor">?attr/colorSecondary</item>
    </style>
    <!-- common -->
    <style name="placeholderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="placeholderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:layout_marginTop">@dimen/space_16</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="progressBar">
        <item name="android:layout_width">@dimen/size_48</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>
    <style name="blueElements">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:background">@drawable/background_blue_rounded</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="blueNotifications" parent="blueElements">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingVertical">@dimen/space_4</item>
    </style>
    <style name="bigBlueButton" parent="blueElements">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingVertical">@dimen/space_20</item>
    </style>
    <style name="resetTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/space_20</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>
    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/space_16</item>
        <item name="android:layout_marginVertical">@dimen/space_8</item>
        <item name="android:paddingVertical">@dimen/space_16</item>
        <item name="android:paddingHorizontal">@dimen/space_16</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@drawable/background_light_gray_rounded</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textCursorDrawable">?attr/colorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- bottom navigation -->
    <style name="divider">
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_1</item>
    </style>
    <style name="bottomNavigation">
        <item name="android:background">@color/white_day_night</item>
        <item name="backgroundTint">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="itemTextAppearanceActive">@style/bottomNavigationView.active</item>
        <item name="itemTextAppearanceInactive">@style/bottomNavigationView</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="itemIconTint">@color/bottom_navigation_colors</item>
        <item name="itemTextColor">@color/bottom_navigation_colors</item>
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
    </style>
		<style name="bottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/font_12</item>
    </style>
    <style name="bottomNavigationView.active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/font_12</item>
    </style>
    <!--filter fragment -->
    <style name="textInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/space_16</item>
        <item name="android:layout_marginVertical">@dimen/space_8</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="hintStyleForTextInputLayout">
        <item name="android:textSize">@dimen/font_12</item>
    </style>
    <style name="hintStyleForTextInputEditText">
        <item name="android:textSize">@dimen/font_16</item>
    </style>
    <style name="textInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:background">@drawable/background_light_gray_rounded</item>
    </style>
  	<!-- team fragment -->
    <style name="teamTextview">
        <item name="android:layout_marginStart">@dimen/space_16</item>
        <item name="android:layout_marginEnd">@dimen/space_16</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
    <!-- favorites fragment -->
    <style name="recycleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="favoritesItemLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/space_12</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="favoriteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
    <style name="favoritesItemTitle" parent="favoriteText">
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="favoritesItemText" parent="favoriteText">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
</resources>
