    <!-- bottom navigation -->
    <style name="divider">
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_1</item>
    </style>

    <style name="bottomNavigation">
        <item name="android:background">@color/white_day_night</item>
        <item name="backgroundTint">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="itemTextAppearanceActive">@style/bottomNavigationView.active</item>
        <item name="itemTextAppearanceInactive">@style/bottomNavigationView</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="itemIconTint">@color/bottom_navigation_colors</item>
        <item name="itemTextColor">@color/bottom_navigation_colors</item>
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
    </style>

    <style name="bottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="bottomNavigationView.active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/font_12</item>
    </style>
